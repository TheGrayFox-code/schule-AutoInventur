<Window x:Class="CarInventory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Car Inventory" Height="380" Width="535">
    <Grid>
        <ListBox x:Name="CarList" HorizontalAlignment="Left" Height="200" Margin="10,10,0,0" VerticalAlignment="Top" Width="217" SelectionChanged="CarList_SelectionChanged" />
        <TextBox x:Name="BrandTextBox" HorizontalAlignment="Left" Margin="262,10,0,0" VerticalAlignment="Top" Width="200" />
        <TextBox x:Name="ModelTextBox" HorizontalAlignment="Left" Margin="262,40,0,0" VerticalAlignment="Top" Width="200" />
        <TextBox x:Name="YearTextBox" HorizontalAlignment="Left" Margin="262,70,0,0" VerticalAlignment="Top" Width="200" />
        <TextBox x:Name="KmTextBox" HorizontalAlignment="Left" Margin="262,100,0,0" VerticalAlignment="Top" Width="200" />
        <TextBox x:Name="PriceTextBox" HorizontalAlignment="Left" Margin="262,130,0,0" VerticalAlignment="Top" Width="200" />
        <Button Click="SaveButton_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,215,415,95">
            <TextBlock>Auto hinzufügen</TextBlock>
        </Button>
        <Button Click="DeleteButton_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="127,215,298,95">
            <TextBlock>Auto löschen</TextBlock>
        </Button>
    </Grid>
</Window>